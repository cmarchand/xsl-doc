    <repositories>
        <!--
            Restlet (XMLCalabash dependency) is not on Maven Central
            (see https://github.com/restlet/restlet-framework-java/issues/481)
        -->
        <repository>
            <id>restlet-repo</id>
            <name>Public online Restlet repository</name>
            <url>http://maven.restlet.org</url>
        </repository>
    </repositories>
    
</project>
